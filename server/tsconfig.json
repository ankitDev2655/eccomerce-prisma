{
  "compilerOptions": {
    /* === File Layout === */
    "rootDir": "./src",          // Root folder of source TypeScript files
    "outDir": "./build",          // Output folder for compiled JavaScript files

    /* === Module & Target === */
    "module": "CommonJS",        // Node.js module system (works without loader)
    "target": "ES2020",          // JavaScript version to compile to (modern features)
    "moduleResolution": "node",  // How TypeScript resolves imports (Node-style)

    /* === Type Checking === */
    "strict": true,                      // Enable all strict type-checking options
    "noUncheckedIndexedAccess": true,    // Require checks when accessing object indices
    "exactOptionalPropertyTypes": true,  // Optional properties are exactly typed

    /* === Node & JS interop === */
    "esModuleInterop": true,   // Allows 'import express from "express"' syntax
    "isolatedModules": true,   // Ensures each file can be safely transpiled independently
    "skipLibCheck": true,      // Skip type checking of node_modules (faster build)

    /* === Output Files === */
    "sourceMap": true,         // Generate source maps for easier debugging
    "declaration": true,       // Generate .d.ts declaration files
    "declarationMap": true,    // Generate source maps for declaration files

    "typeRoots": ["./src/types", "./node_modules/@types"]  // Directories to find type definitions
  },

  /* === Include / Exclude === */
  "include": ["src"],           // Include all TypeScript files under src
  "exclude": ["node_modules", "dist"]  // Exclude dependencies and build output
}
